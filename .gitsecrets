# Git Secrets Configuration
# 這個檔案定義了需要被檢查的敏感資料模式
# 可以隨時根據專案需要添加新的模式

# Supabase 相關
SUPABASE_URL_PATTERN="https://[a-zA-Z0-9]+\.supabase\.co"
SUPABASE_ANON_KEY_PATTERN="eyJ[A-Za-z0-9+/=]+"

# 資料庫連線
DATABASE_URL_PATTERN="postgresql://[^\"'\s]+"
MONGODB_URL_PATTERN="mongodb(\+srv)?://[^\"'\s]+"
MYSQL_URL_PATTERN="mysql://[^\"'\s]+"
REDIS_URL_PATTERN="redis://[^\"'\s]+"

# API Keys
OPENAI_KEY_PATTERN="sk-[A-Za-z0-9]{48}"
GOOGLE_API_KEY_PATTERN="AIza[A-Za-z0-9_-]{35}"
STRIPE_KEY_PATTERN="(sk|pk)_(live|test)_[A-Za-z0-9]{24,}"

# Cloud Providers
AWS_ACCESS_KEY_PATTERN="AKIA[A-Z0-9]{16}"
AWS_SECRET_KEY_PATTERN="[A-Za-z0-9/+=]{40}"
AZURE_KEY_PATTERN="[a-zA-Z0-9+/=]{88}"

# Tokens
JWT_TOKEN_PATTERN="eyJ[A-Za-z0-9_-]+\.[A-Za-z0-9_-]+\.[A-Za-z0-9_-]+"
GITHUB_TOKEN_PATTERN="(ghp|gho|ghs|ghu)_[A-Za-z0-9]{36}"
NPM_TOKEN_PATTERN="npm_[A-Za-z0-9]{36}"
SLACK_TOKEN_PATTERN="xox[baprs]-[A-Za-z0-9-]+"

# 私鑰
PRIVATE_KEY_PATTERN="-----BEGIN (RSA |EC |OPENSSH |DSA |PGP )?PRIVATE KEY( BLOCK)?-----"

# 其他敏感模式
PASSWORD_PATTERN="password[\"']?\s*[:=]\s*[\"'][^\"']{8,}[\"']"
SECRET_PATTERN="secret[\"']?\s*[:=]\s*[\"'][^\"']{8,}[\"']"
TOKEN_PATTERN="token[\"']?\s*[:=]\s*[\"'][^\"']{20,}[\"']"

# 白名單關鍵字（這些會被排除）
WHITELIST_KEYWORDS="placeholder|example|test|demo|dummy|sample|mock|fake|your-|replace|changeme|xxx"