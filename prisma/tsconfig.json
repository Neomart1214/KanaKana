{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "../dist",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components"],
      "@/screens": ["src/screens"],
      "@/hooks": ["src/hooks"],
      "@/utils": ["src/utils"],
      "@/types": ["src/types"],
      "@/data": ["src/data"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}